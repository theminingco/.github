{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:all",
        "plugin:react/all",
        "plugin:@typescript-eslint/all"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["**/tsconfig.json"]
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "ignorePatterns": ["dist"],
    "rules": {
        "array-bracket-newline": ["error", "consistent"],
        "arrow-parens": ["error", "as-needed"],
        "dot-location": ["error", "property"],
        "eqeqeq": ["error", "smart"],
        "quote-props": ["error", "consistent-as-needed"],
        "space-before-function-paren": ["error", { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
        "function-call-argument-newline": ["error", "consistent"],
        "function-paren-newline": ["error", "consistent"],
        "operator-linebreak": ["error", "before"],
        "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".tsx"] }],
        "@typescript-eslint/indent": ["error", 4],
        "@typescript-eslint/no-confusing-void-expression": ["error", { "ignoreArrowShorthand": true }],
        "@typescript-eslint/member-delimiter-style": ["error", { "multiline": { "delimiter": "semi", "requireLast": true }, "singleline": { "delimiter": "comma", "requireLast": false } }],
        "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_", "caughtErrorsIgnorePattern": "^_"  }],
        "@typescript-eslint/object-curly-spacing": ["error", "always"],
        "@typescript-eslint/array-type": ["error", { "default": "generic", "readonly": "generic" }],
        "@typescript-eslint/explicit-function-return-type": ["error", { "allowHigherOrderFunctions": false, "allowDirectConstAssertionInArrowFunctions": false }],

        "sort-keys": "off",
        "sort-imports": "off",
        "brace-style": "off",
        "camelcase": "off",
        "multiline-ternary": "off",
        "max-len": "off",
        "max-statements-per-line": "off",
        "max-statements": "off",
        "max-classes-per-file": "off",
        "max-params": "off",
        "max-lines-per-function": "off",
        "multiline-comment-style": "off",
        "func-names": "off",
        "new-cap": "off",
        "guard-for-in": "off",
        "one-var": "off",
        "indent": "off",
        "prefer-destructuring": "off",
        "id-length": "off",
        "padded-blocks": "off",
        "arrow-body-style": "off",
        "array-element-newline": "off",
        "object-property-newline": "off",
        "line-comment-position": "off",
        "no-inline-comments": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "no-ternary": "off",
        "no-eq-null": "off",
        "no-warning-comments": "off",
        "no-case-declarations": "off",
        "no-console": "off",
        "no-continue": "off",
        "no-extra-parens": "off",
        "no-void": "off",
        "no-undefined": "off",
        "no-mixed-operators": "off",
        "no-extend-native": "off",
        "no-confusing-arrow": "off",
        "no-underscore-dangle": "off",
        "no-duplicate-imports": "off",
        "class-methods-use-this": "off",
        "newline-per-chained-call": "off",
        "react/destructuring-assignment": "off",
        "react/require-default-props": "off",
        "react/forbid-component-props": "off",
        "react/jsx-sort-props": "off",
        "react/jsx-max-props-per-line": "off",
        "react/function-component-definition": "off",
        "react/jsx-handler-names": "off",
        "react/jsx-newline": "off",
        "react/jsx-one-expression-per-line": "off",
        "react/jsx-no-literals": "off",
        "react/jsx-max-depth": "off",
        "react/sort-comp": "off",
        "react/no-set-state": "off",
        "react/no-multi-comp": "off",
        "react/no-danger": "off",
        "react/jsx-props-no-spreading": "off",
        "@typescript-eslint/no-namespace": "off",
        "@typescript-eslint/naming-convention": "off",
        "@typescript-eslint/space-before-function-paren": "off",
        "@typescript-eslint/member-ordering": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-magic-numbers": "off",
        "@typescript-eslint/prefer-readonly-parameter-types": "off",
        "@typescript-eslint/no-unnecessary-condition": "off",
        "@typescript-eslint/brace-style": "off",
        "@typescript-eslint/sort-type-constituents": "off",
        "@typescript-eslint/restrict-template-expressions": "off",
        "@typescript-eslint/lines-between-class-members": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"]
        }
    ]
}
