{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "exclude": [
    "lib",
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/types/**/*.ts"
  ]
}
